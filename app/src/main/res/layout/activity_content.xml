<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Content">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/LocationImage"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
              >

                <com.uncopt.android.widget.text.justify.JustifiedTextView
                    android:id="@+id/Description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|end|center_horizontal|fill_horizontal"
                    android:layout_margin="5px"
                    android:layout_marginStart="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="5px"
                    android:layout_marginEnd="5px"
                    android:layout_marginRight="5px"
                    android:layout_marginBottom="5px"
                    android:background="#009E0909"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="10sp"
                    android:textSize="22dp"
                    app:fontFamily="@font/b_nazanin_black"
                    tools:text="@tools:sample/lorem/random" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>